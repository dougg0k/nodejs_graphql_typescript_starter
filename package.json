{
  "name": "nodejs_graphql_typescript_starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "debug": "cross-env NODE_ENV=development nodemon --exec ts-node --inspect --debug-brk src/index.ts",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register tests/**/*.test.ts --reporter spec",
    "test:watch": "cross-env NODE_ENV=test mocha -r ts-node/register tests/**/*.test.ts --reporter spec --watch",
    "build": "rimraf ./dist && tsc -b",
    "lint": "eslint . --ext .ts --fix"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/graphql": "^14.2.3",
    "@types/helmet": "0.0.43",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.9",
    "@types/sinon": "^7.0.13",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-prettier": "^3.1.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "prettier": "1.18.2",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
