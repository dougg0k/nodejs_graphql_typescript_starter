    "app-root-path": "^2.2.1",
    "argon2": "^0.24.0",
    "dataloader": "^1.4.0",
    "dotenv": "^8.0.0",
    "fastify": "^2.7.1",
    "fastify-cors": "^2.1.3",
    "fastify-helmet": "^3.0.1",
    "fastify-rate-limit": "^2.2.0",
    "graphql": "^14.4.2",
    "graphql-tools": "^4.0.5",
    "pg": "^7.12.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.18"
  }
